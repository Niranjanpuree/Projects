@{
Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
ViewData["Title"] = "North Wind Group | Change Password";
ViewData["class"] = "login-view change-pw";
}

<div class="login-container">
    <div class="row">
        <div class="col text-center mb-2">
            <h2 class="mt-3">Change Password</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class='material-icons'>
                                    lock_open
                                </i>
                            </span>
                        </div>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Current Password"
                            required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class='material-icons'>
                                    lock_outline
                                </i>
                            </span>
                        </div>
                        <input asp-for="Password" class="form-control" type="password" placeholder="New Password"
                            required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class='material-icons'>
                                    lock_outline
                                </i>
                            </span>
                        </div>
                        <input asp-for="Password" class="form-control" type="password"
                            placeholder="Confirm New Password" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-4 text-right">
                    <input type="submit" value="Change Password" class="btn btn-primary" />
                    </div>
               
            </form>
        </div>
    </div>
</div>