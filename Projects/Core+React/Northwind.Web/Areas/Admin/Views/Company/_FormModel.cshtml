@model Northwind.Web.Models.ViewModels.Company.CompanyViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="">
    <form asp-action="_FormModel">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CompanyGuid" class="form-control" />
        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="CompanyCode" class=" fontbold requiredAstreicks control-label"></label>
                <input asp-for="CompanyCode" class="form-control" placeholder="2 CHARACTER CODE" maxlength="2" />
                <span asp-validation-for="CompanyCode" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="CompanyName" class="fontbold requiredAstreicks control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="President" class="fontbold  requiredAstreicks control-label"></label>
                <select asp-for="President" class="form-control">
                    <option value="">--Select--</option>
                    @foreach (var item in Model.UserSelectListItems)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Abbreviation" class="fontbold requiredAstreicks control-label"></label>
                <input asp-for="Abbreviation" class="form-control" />
                <span asp-validation-for="Abbreviation" class="text-danger"></span>
            </div>
            <div class="col-md-12 form-group">
                <label asp-for="Description" class="fontbold control-label"></label>
                <!-- <input asp-for="Description" class="form-control" /> -->
                <div class="">
                    <textarea class="form-control" kendoTextArea [autoSize]="true" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>