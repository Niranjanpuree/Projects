                @foreach (var item in Model.UserSelectListItems)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="BusinessDevelopmentRegionalManager" class="fontbold  requiredAstreicks control-label"></label>
            <select asp-for="BusinessDevelopmentRegionalManager" class="form-control">
                <option value="">--Select--</option>
                @foreach (var item in Model.UserSelectListItems)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="HSRegionalManager" class="fontbold  requiredAstreicks control-label"></label>
            <select asp-for="HSRegionalManager" class="form-control">
                <option value="">--Select--</option>
                @foreach (var item in Model.UserSelectListItems)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>
        </div>
    </form>
</div>