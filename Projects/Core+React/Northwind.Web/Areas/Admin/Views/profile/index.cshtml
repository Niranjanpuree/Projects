@model Northwind.Web.Areas.IAM.Models.IAM.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "North Wind Group | Admin | Settings";
    ViewData["class"] = "profile";
}
<div class="profile-container">
    <div class="row profile-top">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="d-flex align-items-center">
                         <div class="profile-image"> 
                             <div class="profile-image-option"> 
                                 <a href="/Admin/Profile/UploadProfilePicture">
                                 @*<i class="material-icons">add_a_photo</i>*@</a> 
                                 @*<a href=""><i class="material-icons">delete_forever</i></a>*@ 
                             </div> 
                         </div> 
                        <div class="profile-info">
                            <h4 class="mb-0 text-primary">@Model.Displayname </h4>
                            @* <p class="d-flex k-justify-content-center align-items-center mb-0"> *@
                            @*     $1$ <i class="material-icons mr-1">location_on</i>Oklahoma City, OK 73117 USA #1# *@
                            @*     <i class="material-icons mr-1"></i>@Model.JobTitle *@
                            @* </p> *@
                            <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                   value="@Model.JobTitle">
                        </div>
                    </div>
                </div>

                @*<div class="col-auto d-flex align-items-center">
                        <span class="btn btn-primary">Edit Profile</span>
                        <span class="btn">Cancel</span>
                        <span class="btn btn-primary">Update</span>
                    </div>*@
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="material-icons float-left mr-2">person</i>
                        Profile
                    </div>
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="staticEmail" class="control-label mb-0">First Name</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                       value="@Model.Firstname">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="staticEmail" class="control-label mb-0">Last Name</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                       value="@Model.Lastname">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="staticEmail" class="control-label mb-0">Username</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                       value="@Model.Username">
                            </div>
                            @* <div class="form-group col-md-6"> *@
                            @*     <label for="staticEmail" class="control-label mb-0">Address</label> *@
                            @*     <input type="text" readonly class="form-control-plaintext" id="staticEmail" *@
                            @*            value="Kathmandu"> *@
                            @* </div> *@
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="material-icons float-left mr-2">domain</i>
                        Company
                    </div>
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="form-group col-md-6  showNainDivIfValueNotFound" id="@Model.PersonalEmail">
                                <label for="staticEmail" class="control-label mb-0">Company</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                       value="@Model.Company">
                            </div>
                            <div class="form-group col-md-6  showNainDivIfValueNotFound" id="@Model.PersonalEmail"> 
                                <label for="staticEmail" class="control-label mb-0">Department</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                       value="@Model.Department">
                            </div>
                            <div class="form-group col-md-6 showNainDivIfValueNotFound" id="@Model.PersonalEmail">
                                <label for="staticEmail" class="control-label mb-0">Job Title</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                       value="@Model.JobTitle">
                            </div>
                            <div class="form-group col-md-6  showNainDivIfValueNotFound" id="@Model.Manager">
                                <label for="staticEmail" class="control-label mb-0">Manager(s)</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                       value="@Model.Manager">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-4 col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="material-icons float-left mr-2">contacts</i>
                        Contact
                    </div>
                    <div class="card-body pb-0">
                        <div class="form-group showNainDivIfValueNotFound" id="@Model.PersonalEmail">
                            <label for="staticEmail" class="control-label mb-0">Personal Email</label>
                            <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                   value="@Model.PersonalEmail">
                        </div>
                        <div class="form-group showNainDivIfValueNotFound" id="@Model.WorkEmail">
                            <label for="staticEmail" class="control-label mb-0">Work Email</label>
                            <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                   value="@Model.WorkEmail">
                        </div>
                        <div class="form-group showNainDivIfValueNotFound" id="@Model.MobilePhone">
                            <label for="staticEmail" class="control-label mb-0">Mobile</label>
                            <input type="phone" readonly class="form-control-plaintext" id="staticEmail"
                                   value="@Model.MobilePhone">
                        </div>
                        <div class="form-group showNainDivIfValueNotFound" id="@Model.HomePhone">
                            <label for="staticEmail" class="control-label mb-0">Home Phone</label>
                            <input type="phone" readonly class="form-control-plaintext" id="staticEmail"
                                   value="@Model.HomePhone">
                        </div>
                        <div class="form-group showNainDivIfValueNotFound" id="@Model.WorkPhone">
                            <label for="staticEmail" class="control-label mb-0">Work Phone</label>
                            <input type="phone" readonly class="form-control-plaintext" id="staticEmail"
                                   value="@Model.WorkPhone">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 