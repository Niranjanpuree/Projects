                    <div class="row form-group" id="selectActions">
                        <div class="col-2">
                            <label for="cboAction">Select Actions</label>
                        </div>
                        <div class="col-md-5">
                            <select id="cboAction" class="form-control form-control-sm"></select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-2">
                            <label for="addConditions">State Conditions</label>
                        </div>
                        <div class="col-5">
                            <div id="advancedSearchDialog"></div>
                            <!--<a href="#" id="addConditions">Click here to add conditions</a>

