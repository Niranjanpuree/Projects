@using Northwind.Web.Areas.IAM.Models;
@model AddPolicyViewModel
@{
    ViewData["Title"] = "North Wind Group Inc: Add Policy";
    Layout = "~/Areas/IAM/Views/Shared/_Layout.cshtml";
}
<form class="small">
    <div class="container">
        <div class="row mb-2 justify-content-end">
            <div class="col text-right mr-1">
                <button class="btn btn-primary">Save Policy</button>
                <a class="btn btn-secondary" href="/ess/IAM/Policy/">Cancel</a>
            </div>
        </div>
        <div class="row">

        </div>
        <ul id="panelBar">
            <li class="k-state-active">
                <h5 class="k-link k-state-selected">Policy Information</h5>
                <div class="container-fluid">

                    <div class="row form-group mt-3">
                        <div class="col-2">

                            <label for="policyName">Policy Name</label>
                        </div>
                        <div class="col-5">
                            <input type="text" class="form-control form-control-sm" id="policyName" placeholder="Enter policy name" />
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <div class="col-2">
                            <label for="policyDescription">Policy Description</label>
                        </div>
                        <div class="col-5">
                            <input type="text" class="form-control form-control-sm" id="policyDescription" placeholder="Policy Description" />
                        </div>
                    </div>





                </div>
            </li>
            <li class="k-state-active">
                <h5 class="k-link">Add Policy Rules</h5>
                <div class="container-fluid">
                    <div class="form-group row mt-3">
                        <div class="col-2">
                            <label for="cboSelectResource">Select resource</label>
                        </div>
                        <div class="col-md-5">
                            <select asp-for="Resource" asp-items="Model.Resources" id="cboResource" class="form-control form-control-sm"></select>
                        </div>
                    </div>
                    <!--
                    <div class="form-group row">
