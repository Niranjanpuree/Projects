@model Northwind.Web.Areas.IAM.Models.IAM.ViewModels.GroupViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Northwind.Web
@addTagHelper *, Northwind.Web.Helpers

@{
    dynamic groupUser = ViewBag.GroupUser;
}
<h3>Are you sure you want to unassign this group?</h3>
<div class="row">
    <div class="col-md-12">
        <form asp-action="UnassignGroup" onsubmit="return false">
            <div class="form-group row">
                <label asp-for="CN" class="control-label col-sm-4"></label>
                <div class="col-sm-8">@Model.CN</div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="control-label col-sm-4"></label>
                <div class="col-sm-8">@Model.Description</div>
            </div>
            <input name="GroupUserGUID" type="hidden" value="@groupUser.GroupUserGUID"/>
            <input name="GroupGUID" type="hidden" value="@groupUser.GroupGUID" />
            <input name="UserGUID" type="hidden" value="@groupUser.UserGUID" />
        </form>
    </div>
</div>
