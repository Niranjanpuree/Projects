@model Northwind.Web.Models.ViewModels.Contract.ContractViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="p-4">
    <div class="row">
        <div class="col-md-12 mt-n2 mb-1 text-right form-group" id="copyToFundingOfficeBlock">
            <div class="small form-check form-check-inline">
                <input type="checkbox" class="k-checkbox custom-checkbox"
                       id="copyToFundingOffice"
                       name="CustomerInformation.IsSameAsAwardingoffice" value=True>
                <label class="k-checkbox-label" for="copyToFundingOffice">Same as Awarding Agency</label>
            </div>
        </div>
        <div class="col-md-6 border-right">
            <div class="form-group form-required">
                <label asp-for="CustomerInformation.AwardingAgencyOffice"
                       class="control-label  requiredAstreicks"></label>
                <input asp-for="CustomerInformation.AwardingAgencyOfficeName" id="AwardingAgencyOffice"
                       placeholder="Start typing name…." class="form-control" autocomplete="off" />
                <input type="hidden" asp-for="CustomerInformation.AwardingAgencyOffice"
                      autocomplete="off" id="hiddenAwardingAgencyOffice" />
                <span asp-validation-for="CustomerInformation.AwardingAgencyOfficeName" class="text-danger"></span>
                <div class="text-right">
                <a href="JavaScript:void(0);" id="AddNewCustomerOffice" class="AddCustomer">
                    Can not find office? Add New
                </a>
            </div>
            </div>
            <div class="form-group form-required">
                <label asp-for="CustomerInformation.OfficeContractRepresentative"
                     autocomplete="off"  class="control-label  requiredAstreicks"></label>
                <input type="hidden" asp-for="CustomerInformation.OfficeContractRepresentativeHiddenGuid"
                     autocomplete="off"  id="hiddenAwardingOffice_ContractRepresentativeHiddenGuid" />
                <select asp-for="CustomerInformation.OfficeContractRepresentative"
                        id="drpAwardingOffice_ContractRepresentative" class="form-control" autocomplete="off" ></select>
                <span asp-validation-for="CustomerInformation.OfficeContractRepresentative" class="text-danger"></span>
                <div class="text-right">
                <a href="JavaScript:void(0);" id="AddNewCustomerContractRepresentative" class="AddCustomerContact">
                    Contact Not In List? Add New
                </a>
                </div>
            </div>
            <div class="form-group form-required">
                <label asp-for="CustomerInformation.OfficeContractTechnicalRepresent"
                       class="control-label requiredAstreicks"></label>
                <input type="hidden" asp-for="CustomerInformation.OfficeContractTechnicalRepresentHiddenGuid"
                    autocomplete="off"   id="hiddenAwardingOffice_ContractTechnicalRepresentHiddenGuid" />

                <select asp-for="CustomerInformation.OfficeContractTechnicalRepresent"
                     autocomplete="off"   id="drpAwardingOffice_ContractTechnicalRepresent" class="form-control" ></select>
                <span asp-validation-for="CustomerInformation.OfficeContractTechnicalRepresent" class="text-danger"></span>
                <div class="text-right">
                <a href="JavaScript:void(0);" id="AddNewCustomerContractTechnicalRepresent" class="AddCustomerContact">
                    Contact Not In List? Add New
                </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group form-required">
                <label asp-for="CustomerInformation.FundingAgencyOffice"
                       class="control-label copyAsAwardingValidation requiredAstreicks"></label>

                <input asp-for="CustomerInformation.FundingAgencyOfficeName" id="FundingAgencyOffice"
                    autocomplete="off"   placeholder="Start typing name…." class="form-control" />
                <input type="hidden" asp-for="CustomerInformation.FundingAgencyOffice" id="hiddenFundingAgencyOffice" autocomplete="off"/>
                <span asp-validation-for="CustomerInformation.FundingAgencyOfficeName" class="text-danger"></span>
                <div class="text-right"><a href="JavaScript:void(0);" id="AddNewCustomerFunding" class="AddCustomer">
                    Can not find office? Add New
                </a>
                </div>
            </div>
            <div class="form-group form-required">
                <label asp-for="CustomerInformation.FundingOfficeContractRepresentative"
                       class="control-label copyAsAwardingValidation requiredAstreicks"></label>
                <input type="hidden" asp-for="CustomerInformation.FundingOfficeContractRepresentativeHiddenGuid"
                      autocomplete="off" id="hiddenFundingOffice_ContractRepresentativeHiddenGuid" />
                <select asp-for="CustomerInformation.FundingOfficeContractRepresentative"
                      autocomplete="off"  id="drpFundingOffice_ContractRepresentative" class="form-control" ></select>
                <span asp-validation-for="CustomerInformation.FundingOfficeContractRepresentative" class="text-danger"></span>
                <div class="text-right">
                <a href="JavaScript:void(0);" id="AddNewFundingContractRepresent" class="AddCustomerContact">
                    Contact Not In List? Add
                    New
                </a>
                </div>

            </div>
            <div class="form-group form-required">
                <label asp-for="CustomerInformation.FundingOfficeContractTechnicalRepresent"
                       class="control-label copyAsAwardingValidation requiredAstreicks"></label>
                <input type="hidden" asp-for="CustomerInformation.FundingOfficeContractTechnicalRepresentHiddenGuid"
                     autocomplete="off"  id="hiddenFundingOffice_ContractTechnicalRepresentHiddenGuid" />
                <select asp-for="CustomerInformation.FundingOfficeContractTechnicalRepresent"
                    autocomplete="off"  id="drpFundingOffice_ContractTechnicalRepresent" class="form-control" ></select>
                <span asp-validation-for="CustomerInformation.FundingOfficeContractTechnicalRepresent" class="text-danger"></span>
                <div class="text-right">
                <a href="JavaScript:void(0);" id="AddNewFundingTechnicalRepresent" class="AddCustomerContact">
                    Contact Not In List? Add
                    New
                </a>
                </div>

            </div>
        </div>
    </div>
</div>