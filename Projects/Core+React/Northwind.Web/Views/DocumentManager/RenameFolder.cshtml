@model Northwind.Web.Models.DocumentOperation
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Northwind.Web
@addTagHelper *, Northwind.Web.Helpers

<div class="row">
    <div class="col-md-12">
        <form asp-action="Add" onsubmit="return false">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input asp-for="Path" type="hidden" />
            <input asp-for="FileId" type="hidden" />
            <input asp-for="Operation" type="hidden" />
        </form>
    </div>
</div>
