@model Northwind.Web.Models.ViewModels.JobRequestViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "List Of Contracts : All Job Requests ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var resourceVersion = @Configuration["resourceVersion"];
    var cdnUrl = @Configuration["CDNUrl"];
}
@section breadcrumb
    {
    <li class="breadcrumb-item"><a href="/Contract/">List Of Contracts</a></li>
    <li class="breadcrumb-item"><a href="#">All Job Requests</a></li>
}
<div class="row">
    <div class="col-12 col-sm">
        <form id="jobRequestSearchForm" class="search-form-r">
            <div class="input-group">
                @Html.TextBoxFor(model => model.SearchValue, new { @class = "form-control", placeholder = " Search" })
                <div class="input-group-append">
                    <span class="input-group-text" id=""><a href="javascript:void(0)" id="btnSearch" class="k-icon k-i-search"></a></span>
                </div>
            </div>

        </form>
        <div class="search-pills mt-2" id="searchpills">
            @if (!string.IsNullOrWhiteSpace(Model.SearchValue))
            {
                <div class="search-pills-container">
                    <div class="badge badge-pill badge-secondary">
                        @Model.SearchValue <a href="#" id="clearSearch" class="pill-close"><i class="material-icons">close</i></a>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="col-auto">
        @*<div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="ddl-jobStatus" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    All
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="ddl-jobStatus">
                    <a class="dropdown-item" href="#">All</a>
                    <a class="dropdown-item" href="#">My Pending</a>
                    <a class="dropdown-item" href="#">Pending</a>
                </div>
            </div>*@
        <select id="ddl-jobStatus" class="actions-dropdown">
            <option class="actions-dropdown" value="All">All</option>
            <option class="actions-dropdown" value="MyPending">My Pending</option>
            <option class="actions-dropdown" value="Pending">Pending</option>
        </select>
        @*<button class="actions-dropdown">All</button>
            <button class="actions-dropdown">Pending</button>*@
    </div>
    <div class="col-12 mt-3">
        <div id="jobRequestGrid" class="k-table-custom">
        </div>
    </div>
</div>

@section Scripts{
    <script src="@cdnUrl/js/proj/JobRequest.js?v=@resourceVersion" class="clause" data-farClauseID="" data-isEditable="true"></script>
}
