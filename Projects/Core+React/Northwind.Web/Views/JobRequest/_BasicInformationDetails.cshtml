@model Northwind.Web.Models.ViewModels.JobRequestViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="p-4">
    <div class="row">
        <input hidden asp-for="@Model.BasicContractInfo.ContractNumber" class="form-control" />
        <input hidden asp-for="@Model.BasicContractInfo.ProjectNumber" />
        <input type="hidden" Name="IsIDIQContractHidden" id="IsIDIQContractHidden" value="@Model.BasicContractInfo.IsIDIQContract.ToString()" />

        @if (Model.Parent_ContractGuid != null)
        {
            <div class="col-sm-6 form-group">
                <label asp-for="BasicContractInfo.IsIDIQContract" class="control-label control-label-read"></label>
                <div class="form-value">
                    @Model.BasicContractInfo.IDIQContract
                </div>
            </div>
        }



        <div class="col-sm-6 form-group">
            <label class="control-label control-label-read">Is Task Order?</label>
            @if (Model.Parent_ContractGuid != null)   //todo  Compare with Parent_ContractGuid not contractguid
            {
                <div class="form-value">
                    Yes
                </div>
            }
            else
            {
                <div class="form-value">
                    No
                </div>
            }
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.ContractNumber" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.ContractNumber)
            </div>
        </div>

        @if (Model.Parent_ContractGuid != null)
        {
            <div class="col-sm-6 form-group">
                <label asp-for="BasicContractInfo.SubContractNumber" class="control-label control-label-read"></label>
                @if (Model.BasicContractInfo.SubContractNumber != null && Model.BasicContractInfo.SubContractNumber != "")
                {
                    <div class="form-value">
                        @Model.BasicContractInfo.SubContractNumber
                    </div>
                }
                else
                {
                    <div class="form-value">
                        Not Entered
                    </div>
                }
            </div>
        }

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.ContractTitle" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.ContractTitle)
            </div>
        </div>

        <div class="col-md-6 form-group">
            <label asp-for="BasicContractInfo.ProjectNumber" class="control-label"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.ProjectNumber)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.ORGID" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.OrganizationName)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.CompanyName" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.CompanyName)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.RegionName" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.RegionName)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.OfficeName" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.OfficeName)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.CountryOfPerformance" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.CountryOfPerformanceSelected)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.PlaceOfPerformance" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.PlaceOfPerformanceSelected)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.POPStart" class="control-label control-label-read"></label>
            <div class="form-value">
                @Model.BasicContractInfo.POPStart?.ToString("MM/dd/yyyy")
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.POPEnd" class="control-label control-label-read"></label>
            <div class="form-value">
                @Model.BasicContractInfo.POPEnd?.ToString("MM/dd/yyyy")
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="BasicContractInfo.NAICSCode" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m => m.BasicContractInfo.NAICSCodeName)
            </div>
        </div>

        <div class="col-sm-6 form-group QualityLevel">
            <label asp-for="BasicContractInfo.QualityLevel" class="control-label control-label-read"></label>
            @if (Model.BasicContractInfo.QualityLevelName != null && Model.BasicContractInfo.QualityLevelName != "")
            {
                <div class="form-value">
                    @Model.BasicContractInfo.QualityLevelName
                </div>
            }
            else
            {
                <div class="form-value">
                    Not Entered
                </div>
            }
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="FinancialInformation.ContractType" class="control-label control-label-read"></label>
            <div class="form-value">
                @Html.DisplayFor(m=>m.FinancialInformation.ContractTypeName)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="FinancialInformation.AwardAmount" class="control-label control-label-read"></label><i class="k-icon k-i-info info-tooltip" title="Cumulative Amount"></i>
            <div class="form-value">
                @Html.DisplayFor(m => m.FinancialInformation.Currency) @Html.DisplayFor(m => m.FinancialInformation.AwardAmount)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="FinancialInformation.FundingAmount" class="control-label control-label-read"></label><i class="k-icon k-i-info info-tooltip" title="Cumulative Amount"></i>
            <div class="form-value">
                @Html.DisplayFor(m => m.FinancialInformation.Currency) @Html.DisplayFor(m => m.FinancialInformation.FundingAmount)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label class="control-label control-label-read">Firm Fixed Price Fee %</label>
            <div class="form-value">
                @Html.DisplayFor(m => m.FinancialInformation.FeePercent)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label asp-for="FinancialInformation.BillingAddress" class="control-label control-label-read"></label>
            <div class="form-value">
                @(string.IsNullOrWhiteSpace(Model.FinancialInformation.BillingAddress) ? "Not Entered" : Model.FinancialInformation.BillingAddress)
            </div>
        </div>

        <div class="col-sm-6 form-group">
            <label class="control-label control-label-read">8A</label>
            @if (Model.FinancialInformation.SetAside != null && Model.FinancialInformation.SetAside != "")
            {
                <div class="form-value">
                    @Model.FinancialInformation.SetAsideName
                </div>
            }
            else
            {
                <div class="form-value">
                    Not Entered
                </div>
            }

        </div>
    </div>
</div>