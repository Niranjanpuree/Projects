@model Northwind.Web.Models.ViewModels.JobRequestViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="p-4">
    <div class="row">
        @if (Model.IsIntercompanyWorkOrder == true)
        {
            <div class="col-md-6 form-group">
                <label asp-for="IsIntercompanyWorkOrder" class="control-label requiredAstreicks"></label>
                <div class="form-check pl-0">
                    Yes
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Companies" class="control-label requiredAstreicks"></label>
                <div class="clearfix"></div>
                @foreach (var item in Model.CompanySelected)
                {
                    <div>@item</div>
                }
            </div>

        }
        else
        {
            <div class="col-md-6 form-group">
                <label asp-for="IsIntercompanyWorkOrder" class="control-label requiredAstreicks"></label>
                <div class="form-check pl-0">
                    No
                </div>
            </div>
        }
    </div>
</div>
