@model Northwind.Web.Models.ViewModels.Contract.ContractViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="p-4">
    <div class="row">
        <div class="col-md-12 mt-n2 mb-1 text-right form-group" id="copyToFundingOfficeBlock">
            <div class="small form-check form-check-inline">
                <input type="checkbox" class="k-checkbox custom-checkbox"
                       id="copyToFundingOffice"
                       name="CustomerInformation.IsSameAsAwardingoffice" value=True>
                <label class="k-checkbox-label" for="copyToFundingOffice">Same as Awarding Agency</label>
            </div>
        </div>
        <div class="col-md-6 border-right">
            <div class="form-group form-required">
                <label asp-for="CustomerInformation.AwardingAgencyOffice"
                    class="control-label  requiredAstreicks  fontbold"></label>
                <input asp-for="CustomerInformation.AwardingAgencyOfficeName" id="AwardingAgencyOffice"
                    placeholder="Start typing name…." class="form-control" autocomplete="off" />
                <input type="hidden" asp-for="CustomerInformation.AwardingAgencyOffice" id="hiddenAwardingAgencyOffice"
                    autocomplete="off" />
                <span asp-validation-for="CustomerInformation.AwardingAgencyOfficeName" class="text-danger"></span>
                <div class="text-right">
                    <a href="JavaScript:void(0);" id="AddNewCustomerOffice" class="AddCustomer">
                        Can not find office? Add New
                    </a>
                </div>
            </div>
            <div class="form-group form-required">
                <label class="control-label  requiredAstreicks  fontbold">Task Order Representative</label>
                <input type="hidden" asp-for="CustomerInformation.OfficeContractRepresentativeHiddenGuid"
                    id="hiddenAwardingOffice_ProjectRepresentativeHiddenGuid" autocomplete="off" />
                <select asp-for="CustomerInformation.OfficeContractRepresentative"
                    id="drpAwardingOffice_ProjectRepresentative" class="form-control"
                    autocomplete="off"></select>
                <span asp-validation-for="CustomerInformation.OfficeContractRepresentative" class="text-danger"></span>
                <div class="text-right">
                    <a href="JavaScript:void(0);" id="AddNewCustomerProjectRepresentative" class="AddCustomerContact">
                        Contact Not In List? Add New
                    </a>
                </div>
            </div>
            <div class="form-group form-required">
                <label class="control-label   fontbold">Task Order Technical Representative</label>
                <input type="hidden" asp-for="CustomerInformation.OfficeContractTechnicalRepresentHiddenGuid"
                    id="hiddenAwardingOffice_ProjectTechnicalRepresentHiddenGuid" autocomplete="off" />

                <select asp-for="CustomerInformation.OfficeContractTechnicalRepresent"
                    id="drpAwardingOffice_ProjectTechnicalRepresent" class="form-control" autocomplete="off"></select>
                <span asp-validation-for="CustomerInformation.OfficeContractTechnicalRepresent"
                    class="text-danger"></span>
                <div class="text-right">
                    <a href="JavaScript:void(0);" id="AddNewCustomerProjectTechnicalRepresent"
                        class="AddCustomerContact">
                        Contact Not In List? Add New
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-required">
                <label class="control-label copyAsAwardingValidation requiredAstreicks  fontbold">Funding Agency Office</label>

                <input asp-for="CustomerInformation.FundingAgencyOfficeName" id="FundingAgencyOffice"
                    placeholder="Start typing name…." class="form-control" autocomplete="off" />
                <input type="hidden" asp-for="CustomerInformation.FundingAgencyOffice" id="hiddenFundingAgencyOffice"
                    autocomplete="off" />
                <span asp-validation-for="CustomerInformation.FundingAgencyOfficeName" class="text-danger"></span>
                <div class="text-right"><a href="JavaScript:void(0);" id="AddNewCustomerFunding" class="AddCustomer">
                        Can not find office? Add New
                    </a>
                </div>
            </div>
            <div class="form-group form-required">
                <label class="control-label copyAsAwardingValidation requiredAstreicks  fontbold">Task Order Representative</label>
                <input type="hidden" asp-for="CustomerInformation.FundingOfficeContractRepresentativeHiddenGuid"
                    id="hiddenFundingOffice_ProjectRepresentativeHiddenGuid" autocomplete="off" />
                <select asp-for="CustomerInformation.FundingOfficeContractRepresentative"
                    id="drpFundingOffice_ProjectRepresentative" class="form-control"
                    autocomplete="off"></select>
                <span asp-validation-for="CustomerInformation.FundingOfficeContractRepresentative"
                    class="text-danger"></span>
                <div class="text-right">
                    <a href="JavaScript:void(0);" id="AddNewFundingProjectRepresent" class="AddCustomerContact">
                        Contact Not In List? Add
                        New
                    </a>
                </div>

            </div>
            <div class="form-group">
                <label class="control-label fontbold copyAsAwardingValidation">Task Order Technical Representative</label>
                <input type="hidden" asp-for="CustomerInformation.FundingOfficeContractTechnicalRepresentHiddenGuid"
                    id="hiddenFundingOffice_ProjectTechnicalRepresentHiddenGuid" autocomplete="off" />
                <select asp-for="CustomerInformation.FundingOfficeContractTechnicalRepresent"
                    id="drpFundingOffice_ProjectTechnicalRepresent" class="form-control" autocomplete="off"></select>
                <span asp-validation-for="CustomerInformation.FundingOfficeContractTechnicalRepresent"
                    class="text-danger"></span>
                <div class="text-right">
                    <a href="JavaScript:void(0);" id="AddNewFundingTechnicalRepresent" class="AddCustomerContact">
                        Contact Not In List? Add
                        New
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>