@model Northwind.Web.Models.ViewModels.RevenueRecognition.RevenueRecognitionViewModel
@{
    IDictionary<string, bool> listItems = new Dictionary<string, bool>();
    listItems.Add(new KeyValuePair<string, bool>("Yes", true));
    listItems.Add(new KeyValuePair<string, bool>("No", false));
}
<!-- <div class="col-12"> -->
<h4><span>Determine Transaction Price</span></h4>
<div class="row">
    <div class="col-md-12 form-group">
        <label asp-for="ContractType" class="control-label requiredAstreicks">
            Nature of pricing arrangement (Contract Type):
        </label>
        <select asp-for="ContractType" id="IdentityContract" class="form-control" required>
            <option value="">--Select--</option>
            @foreach (var item in Model.PriceArrangementtype)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
        <span asp-validation-for="ContractType" class="text-danger"></span>
    </div>
    <div class="col-md-12 form-group">
        <label asp-for="IsPricingVariation" class="control-label  fontbold">
            Pricing Variation :
        </label>
        <div class="form-check pl-0">
            @foreach (var item in listItems)
            {
                <div class="form-check form-check-inline">
                    <input asp-for="IsPricingVariation" type="radio" value="@item.Value"
                           class="k-radio custom-checkbox IsPricingVariation"
                           id="IsPricingVariation-@item.Value" />
                    <label class="k-radio-label" for="IsPricingVariation-@item.Value">
                        @item.Key
                    </label>
                </div>
            }
              <div class="text-muted">
                <small>
                   Does contract contain incentives, performance bonuses,
            award fee or penalties or other similar items that would allow the amount of consideration received from the customer to vary? The consideration may also vary due to if the company's entitlement to the consideration is contingent on the occurrence or nonoccurrence of a future event.
                </small>
            </div>
        </div>
        <span asp-validation-for="IsPricingVariation" class="text-danger"></span>
    </div>

    <div class="col-md-12 form-group">
        <label asp-for="BaseContractPrice" class="control-label">
            Base Contract Price the company believes it will be entitled to receive:
        </label>
        <input asp-for="BaseContractPrice" class="form-control amountStyle" />
        <span asp-validation-for="BaseContractPrice" class="text-danger"></span>
    </div>
    <div class="col-md-12 form-group" id="idHIdePricingExplanation">
        <label asp-for="PricingExplanation" class="control-label">
            Explanation:
        </label>
        <textarea class="form-control" asp-for="PricingExplanation">@Model.PricingExplanation</textarea>
        <span asp-validation-for="PricingExplanation" class="text-danger"></span>
    </div>
    <div class="col-md-12 form-group">
        <label asp-for="AdditionalPeriodOption" class="control-label requiredAstreicks">
            List each additional option period with the corresponding consideration the company expects to receive:
        </label>
        <textarea class="form-control" asp-for="AdditionalPeriodOption">@Model.AdditionalPeriodOption</textarea>
        <span asp-validation-for="AdditionalPeriodOption" class="text-danger"></span>
        <div class="text-muted">
            <small>
                Only list option periods that are probable to be renewed/exercised.
            </small>
        </div>
    </div>
    <div class="col-md-12 form-group">
        <label asp-for="Step3Note" class="control-label"> Step 3 Notes:</label>
        <textarea class="form-control" asp-for="Step3Note">@Model.Step1Note</textarea>
        <span asp-validation-for="Step3Note" class="text-danger"></span>
    </div>
</div>
